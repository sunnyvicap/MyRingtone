<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
         <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>


    <style name="AppTheme.NoActionBarSplash" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowFullscreen">false</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>

    </style>

    <style name="DialogeTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NevigationtextViewMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/text_regular_title</item>
        <item name="android:fontFamily">@font/gotham_medium</item>

    </style>

    <style name="NevigationtextViewLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:fontFamily">@font/sans_semi_bold</item>
        <item name="android:textSize">@dimen/text_regular_large</item>

    </style>
    <style name="NevigationtextViewSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:fontFamily">@font/sans_semi_bold</item>
    </style>


    <style name="editTextMedium" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/regular_text_14</item>
        <item name="hintTextColor">@color/white</item>
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="errorTextColor">@color/error</item>
        <item name="startIconTint">@color/white</item>


    </style>
    <style name="editTextUnderLine">
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/regular_text_14</item>
        <item name="hintTextColor">@color/white</item>
        <item name="boxStrokeColor">#fff</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="errorTextColor">@color/error</item>
        <item name="startIconTint">@color/white</item>


    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />



</resources>
